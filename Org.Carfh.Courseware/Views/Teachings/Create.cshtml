@using Lang
@model Org.Carfh.Courseware.Models.Courseware.CourseItemViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="https://cdn.ckeditor.com/4.5.7/full-all/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.2.7/inputmask/inputmask.js"></script>
    <script src="/Content/../Scripts/teachings.create.js"></script>
}

<div class="headline-box3">
    <div class="headline-box-content">
        <h1>@Global.AddTeaching</h1>
        <p class="lead"></p>
    </div>

</div>

<div class="platform-content">
    <div class="row">
        <div class="col-lg-12 content-form">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model=> model.Course)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "" + Global.Title } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Chapter, new {htmlAttributes = new {@class = "form-control", @placeholder = "" + Global.Chapter}})
                            @Html.ValidationMessageFor(model => model.Chapter, "", new {@class = "text-danger"})
                        </div>

                    </div>

                    <div class="rich-text-container">


                        @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @id = "Content" } })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <button onclick="window.history.back()" class="btn btn-default">@Global.Back</button>
                            <input type="submit" value="@Global.Create" class="btn btn-cafh-a"/>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>

