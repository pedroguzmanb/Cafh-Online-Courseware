@using Lang
@model IEnumerable<Org.Cafh.Courseware.Models.Courseware.CourseItemViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="headline-box3">
    <div class="headline-box-content">
        <h1>@Global.TeachingsCatalogHeader</h1>
        <p class="lead">@Global.TeachingsCatalogDescription</p>
    </div>

</div>




<div class="platform-content">
    <div class="row">

        <div class="col-lg-12">
            <div class="teachings-actions">
                <a href="@Url.Action("Index", "Courses", new {language = ViewBag.Lang})" class="btn btn-cafh-a"><i class="fa fa-undo"></i> @Global.Back</a>
                <a href="@Url.Action("Create", "Teachings", new {course = ViewBag.Course})" class="btn btn-cafh-a"><i class="fa fa-plus"></i> @Global.Add</a>
            </div>
        </div>

        <div id="no-more-tables" class="col-md-12 content-form">
            <table class="table">
                <thead class="cf">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Chapter)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>

                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-title="@Global.Chapter">
                                @Html.DisplayFor(modelItem => item.Chapter)
                            </td>
                            <td data-title="@Global.Title">
                                <p class= "teaching-title"> @item.Title </p>
                            </td>
                            <td>
                                <a href="@Url.Action("Read", "Teachings", new {id = item.Id})" class="btn btn-cafh-a">@Global.ViewTeaching <i class="fa fa-external-link"></i> </a>
                                <a href="@Url.Action("Delete", "Teachings", new {id = item.Id})" class="btn btn-danger"> @Global.Delete <i class="fa fa-trash"></i></a>
                                <a href="@Url.Action("Edit", "Teachings", new {id = item.Id})" class="btn btn-success"> @Global.Edit <i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>



            </table>
        </div>
    </div>
</div>










