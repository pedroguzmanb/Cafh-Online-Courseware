@using Lang
@model IEnumerable<Org.Cafh.Courseware.Models.Courseware.CourseViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="headline-box3">
    <div class="headline-box-content">
        <h1>@Global.CourseCatalog</h1>
        <p class="lead">@Global.CourseCatalogDescription</p>
    </div>

</div>

<div class="platform-content">
    <div class="row">
        <div class="col-lg-12 content-form">

            @foreach (var item in Model)
            {

                <div class="col-lg-12 course">
                    <div class="col-lg-12 course-title">
                        <h4><strong>@Html.DisplayFor(modelItem => item.Title)</strong> </h4>
                    </div>
                    <div class="col-lg-12 course-desc">
                        <h4>@Global.Description</h4>

                        @Html.DisplayFor(modelItem => item.Description)
                        <hr/>
                        <div class="btn-group-vertical">
                            <a href="@Url.Action("Index", "Teachings", new {course = item.Id})" class="btn btn-cafh-a"> @Global.GoToTeachings <i class="fa fa-arrow-circle-right"></i></a>
                            <a href="@Url.Action("Delete", "Courses", new {course = item.Id})" class="btn btn-danger"> @Global.Delete <i class="fa fa-trash"></i></a>
                            <a href="@Url.Action("Edit", "Courses", new {course = item.Id})" class="btn btn-success"> @Global.Edit <i class="fa fa-pencil"></i></a>
                        </div>
                        <hr/>
                    </div>

                </div>

            }

        </div>
    </div>
</div>


