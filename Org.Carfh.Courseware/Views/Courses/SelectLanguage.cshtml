@using Lang
@model Org.Cafh.Courseware.Models.Courseware.LanguageSelectViewModel

@{
    ViewBag.Title = @Global.Language;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="headline-box2">
    <div class="headline-box-content">
        <h1>@Global.Language</h1>
    </div>
</div>

<div class="platform-content">
    <div class="row">
        <div class="col-lg-6 content-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>@Global.SelectLanguageInstructions</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Language, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <select data-val="true" data-val-required="Please select a valid language." htmlattributes="{ class = form-control, id = Language }" id="Language" name="Language">
                               
                            </select>
                            @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@Global.Next" class="btn btn-cafh-a" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="../../Scripts/courses.language.js"></script>
}
